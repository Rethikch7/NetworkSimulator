N1 = Network()
N1.add_device(devices.devices(N1.deivces_counter,devices.generate_mac_address(),IPNetwork('10.0.0.2/8'),IPNetwork('10.0.0.1/8'),0))
N1.add_device(devices.devices(N1.deivces_counter,devices.generate_mac_address(),IPNetwork('10.0.0.3/8'),IPNetwork('10.0.0.1/8'),0))
N1.add_device(devices.devices(N1.deivces_counter,devices.generate_mac_address(),IPNetwork('40.0.0.2/8'),IPNetwork('40.0.0.1/8'),1))
N1.add_device(devices.devices(N1.deivces_counter,devices.generate_mac_address(),IPNetwork('40.0.0.3/8'),IPNetwork('40.0.0.1/8'),1))
N1.add_hub(devices.hubs(N1.deivces_counter,1))
N1.add_hub(devices.hubs(N1.deivces_counter,0))
r1 = router.Router(N1.deivces_counter,2)
r1.config_interface_ip(0,IPNetwork('10.0.0.1/8'))
r1.config_interface_ip(1,IPNetwork('20.0.0.2/8'))
r1.init_rip()
N1.add_router(r1)
N1.connect_devices(0,4)
N1.connect_devices(1,4)
N1.connect_devices(2,5)
N1.connect_devices(3,5)
N1.connect_devices(4,6,0)
N1.connect_devices(5,6,0)
N1.send_msg(0,2,"Device0ToDevice1",2)
N1.visualise_network()